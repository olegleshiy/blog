<section class="section section__users">
    <div class="container">
        <h1 class="page-title">Manager user</h1>
        {{#if error}}
            <p class="alert">{{error}}</p>
        {{/if}}
        <div class="row">
            <div class="col s6">
                <div class="wrapper__table">
                    <table class="table highlight users-table">
                        <thead class="thead">
                        <tr class="thead__row">
                            <th>â„–</th>
                            <th>Name <div class="sort arrows"><i class="fas fa-sort-up"></i><i class="fas
                        fa-sort-down"></i></div></th>
                            <th>Role</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody class="tbody">
                        {{#if users.length}}
                            {{#each users}}
                                <tr class="tbody__row">
                                    <td class="row__number">{{number}}</td>
                                    <td>{{name}}</td>
                                    <td>{{role}}</td>
                                    <td class="td__btn">
<!--                                        <form action="/admin/users/edit" method="POST">-->
<!--                                            <input type="hidden" name="id" value='{{id}}'>-->
<!--                                            <button class="btn blue"><i class="material-icons">edit</i></button>-->
<!--                                        </form>-->
                                        <a href='/admin/users/{{id}}/edit' class="btn blue"><i class="fas fa-edit"></i></a></td>
                                    <td class="td__btn">
                                        <form action="/admin/users/delete" method="POST" class="delete__form">
                                            <input type="hidden" name="id" value='{{id}}'>
                                            <button class="btn red"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {{/each}}
                        {{else}}
                            <tr class="tbody__row">
                                <td>
                                    <p>Users not found</p>
                                </td>
                            </tr>
                        {{/if}}
                        </tbody>
                    </table>
                </div>
                <div class='block__button'>
                    <a href="/admin/users/add" class="btn green tooltipped" data-position="bottom" data-tooltip="Add
                    user"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
